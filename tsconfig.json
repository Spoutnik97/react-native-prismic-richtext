{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["ESNext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "./lib",
    "sourceMap": true,
    "strict": true,
    "target": "ESNext"
  },
  "exclude": ["**/__tests__/*"],
  "include": ["src", "typings"]
}